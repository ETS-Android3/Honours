<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reward"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">


    <TextView
        android:layout_width="239dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="99dp"
        android:fontFamily="@font/sassoonprimary"
        android:text="topics"
        android:textColor="@color/white"
        android:textSize="55dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="340dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="506dp"
        android:background="@drawable/roundcorner2"
        android:fontFamily="@font/comic"
        android:text="Fractions"
        android:textSize="20dp" />

    <Button
        android:id="@+id/addition"
        android:layout_width="340dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="249dp"
        android:background="@drawable/roundcorner2"
        android:fontFamily="@font/sassoonprimary"
        android:text="Add/Subtracting"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="340dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="377dp"
        android:background="@drawable/roundcorner2"
        android:fontFamily="@font/comic"
        android:text="Multiply"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/rewardBtn"
        android:layout_width="112dp"
        android:layout_height="134dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="1dp"
        android:background="@null"
        android:onClick="rewardsmenu"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="63dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/money"
        tools:srcCompat="@drawable/money" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/comic"
        android:text="0" />

</RelativeLayout>